{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "type": "module",
      "declarationDir": "./types",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      "baseUrl": "./",
      "paths": {"~/*": ["src/*"]},
      "esModuleInterop": true,
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
   ]
  }